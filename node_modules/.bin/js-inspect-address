#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../cardano-addresses/bin/js-inspect-address" "$@"
else 
  exec node  "$basedir/../cardano-addresses/bin/js-inspect-address" "$@"
fi
